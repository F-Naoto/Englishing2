<h1 class="text-purple-900 font-bold text-2xl text-center mt-10">回答ページ</h1>
<div class="mt-4 bg-white mx-auto max-w-sm shadow-lg rounded-lg overflow-hidden">
  <div class="sm:flex sm:items-center px-4 py-4">
    <div class="mb-4">
      <p class="text-xl leading-tight">タイトル：<%= @question.title %></p>
      <h6 class="card-subtitle mb-2 text-muted">生徒名：<%=link_to @question.student.name, student_path(@question.student) %></h6>
      <p class="text-sm leading-tight text-grey-dark">質問内容：<%= @question.content %></p>
      <%= render 'partials/like', question: @question %>
    </div>
  </div>
</div>


<% if current_teacher %>
  <%= form_with model: @answer do |f| %>
    <div class="text-center mt-6">
      <h1 class="text-purple-900 font-bold text-2xl">回答する</h1>
      <div class="py-8 border-b border-indigo-50">
          <div class: "flex-1 justify-center">
            <div><%= f.label :title, "タイトル" %></div>
            <div><%= f.text_field :title, class: "border border-gray-300 rounded" %> <br></div>
          </div>
          <div class: "flex-1 justify-center w-20">
            <div>
            <%= f.label :content, "質問内容" %>
            </div>
            <div>
              <%= f.text_area :content, class: "border border-gray-300 rounded w-18" %>
            </div>
          </div>
          <%= f.hidden_field :question_id, value: @question.id %>
          <div class: "flex justify-center mt-8">
            <%= f.submit '回答する', class: "text-white py-2 px-4 rounded-lg bg-purple-700 hover:bg-purple-600 shadow-md font-medium  transition-colors" %>
          </div>
      </div>
    </div>
  <% end %>
<% end %>
<% @question.answers.each do |answer|%>
  <div class="bg-white">
    <div class="max-w-screen-2xl px-4 md:px-8 mx-auto">
      <div class="mt-3 grid sm:grid-cols-1 xl:grid-cols-1 gap-4 md:gap-8">
        <div class="flex flex-col border rounded-lg p-4 md:p-6">
          <h3 class="text-lg md:text-xl font-semibold mb-2"><%= answer.teacher.name %></h3>
          <p class="text-gray-500 mb-4"><%= answer.content %></p>
          <%= render 'best_answer', question: @question, best_answer: @best_answer, answer: @answer %>
        </div>
      </div>
    </div>
  </div>
<% end %>
