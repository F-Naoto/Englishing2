<h1 class="text-purple-900 font-bold text-2xl text-center mt-10">質問一覧</h1>
<div class="text-center mt-6">
  <h1 class="text-purple-900 font-bold text-2xl">質問する</h1>
  <div class="py-8 border-b border-indigo-50">
    <%= form_with(model: @question, local: true) do |f| %>
      <div class: "flex-1 justify-center">
        <div><%= f.label :title, "タイトル" %></div>
        <div><%= f.text_field :title, class: "border border-gray-300 rounded" %> <br></div>
      </div>
      <div class: "flex-1 justify-center w-20">
        <div>
        <%= f.label :content, "質問内容" %>
        </div>
        <div>
          <%= f.text_area :content, class: "border border-gray-300 rounded w-18" %>
        </div>
      </div>
      <div class: "flex justify-center mt-8">
        <%= f.submit '質問', class: "text-white py-2 px-4 rounded-lg bg-purple-700 hover:bg-purple-600 shadow-md font-medium  transition-colors" %>
      </div>
    <% end %>
  </div>
</div>

<div class="bg-white py-6 sm:py-8 lg:py-12">
  <div class="max-w-screen-2xl px-4 md:px-8 mx-auto">
    <div class="mt-3 grid sm:grid-cols-2 xl:grid-cols-3 gap-4 md:gap-8">
      <% @questions.each do |question| %>
          <div class="flex flex-col border rounded-lg p-4 md:p-6">
          <%= link_to question_path(question) do %>
            <h3 class="text-lg md:text-xl font-semibold mb-2"><%= question.title %></h3>
            <p class="text-gray-500 mb-4"><%= question.content %></p>
            <%= link_to '回答する', question_path(question), class: "text-center w-28 text-white py-2 px-4 rounded-lg bg-purple-700 hover:bg-purple-600 shadow-md font-medium  transition-colors" %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class='p-top__paginate'><%= paginate(@questions) %></div>
