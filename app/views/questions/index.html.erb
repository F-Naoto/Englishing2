<h1 class="text-purple-900 font-bold text-2xl text-center mt-10">質問一覧</h1>
<%= render 'question_form' %>
<div class="bg-white py-6 sm:py-8 lg:py-12">
  <div class="max-w-screen-2xl px-4 md:px-8 mx-auto">
    <div class="mt-3 grid sm:grid-cols-2 xl:grid-cols-3 gap-4 md:gap-8">
      <% @questions.each do |question| %>
          <div class="flex flex-col border rounded-lg p-4 md:p-6">
          <%= link_to question_path(question) do %>
            <h3 class="text-lg md:text-xl font-semibold mb-2"><%= question.title %></h3>
            <p class="text-gray-500 mb-4"><%= question.content %></p>
            <%= link_to '回答する', question_path(question), class: "text-center w-28 text-white py-2 px-4 rounded-lg bg-purple-700 hover:bg-purple-600 shadow-md font-medium  transition-colors" %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class='p-top__paginate'><%= paginate(@questions) %></div>
