<% if current_student %>
  <div class="text-center mt-6">
    <div class="py-8 border-b border-indigo-50">
      <%= form_with(model: @question, local: true) do |f| %>
        <div class: "flex-1 justify-center">
          <div><%= f.label :title, "タイトル" %></div>
          <div><%= f.text_field :title, class: "border border-gray-300 rounded w-2/5 h-8 px-2 py-2" %></div>
        </div>
        <div class: "flex-1 justify-center w-20">
          <div class="mt-2">
          <%= f.label :content, "質問内容" %>
          </div>
          <div>
            <%= f.text_area :content, class: "border border-gray-300 rounded w-2/5 h-40 px-3" %>
          </div>
        </div>
        <div class: "flex justify-center mt-8">
          <%= f.submit '質問する', class: "text-white py-2 px-6 rounded-lg bg-purple-700 hover:bg-purple-600 shadow-md font-medium  transition-colors" %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
