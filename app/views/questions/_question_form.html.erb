<% if current_student %>
  <div class="text-center mt-6">
    <h1 class="text-purple-900 font-bold text-2xl">質問する</h1>
    <div class="py-8 border-b border-indigo-50">
      <%= form_with(model: @question, local: true) do |f| %>
        <div class: "flex-1 justify-center">
          <div><%= f.label :title, "タイトル" %></div>
          <div><%= f.text_field :title, class: "border border-gray-300 rounded" %> <br></div>
        </div>
        <div class: "flex-1 justify-center w-20">
          <div>
          <%= f.label :content, "質問内容" %>
          </div>
          <div>
            <%= f.text_area :content, class: "border border-gray-300 rounded w-18" %>
          </div>
        </div>
        <div class: "flex justify-center mt-8">
          <%= f.submit '質問', class: "text-white py-2 px-4 rounded-lg bg-purple-700 hover:bg-purple-600 shadow-md font-medium  transition-colors" %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
