<div class="hidden", id="edit_modal">
<% unless BestAnswer.where(question_id: @question.id).exists? %>
  <% if current_teacher %>
    <%= form_with model: answer, url:answer_path, method: :patch  do |f| %>
      <div class="text-center mt-6">
        <div class="py-8 border-b border-indigo-50">
          <div class="flex-1 justify-center">
            <div>
              <%= f.label :content, "内容" %>
            </div>
            <div>
              <%= f.text_area :content, class: "border border-gray-300 rounded w-4/12 h-32" %>
            </div>
          </div>
          <%= f.hidden_field :question_id, value: question.id %>
          <div class="flex justify-center mt-8">
            <%= f.submit '編集する', class: "text-white py-2 px-4 rounded-lg bg-purple-700 hover:bg-purple-600 shadow-md font-medium  transition-colors cursor-pointer" %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
<% end %>
</div>
