
<% if current_student %>
  <%= form_with(model: current_student.active_relationships.find_by(followed_id: @teacher.id),
              html: { method: :delete }, local: true) do |f| %>
    <div><%= hidden_field_tag :followed_id, @teacher.id %></div>
    <%= f.submit "Unfollow", class: "btn btn-default" %>
  <% end %>
<% end %>
