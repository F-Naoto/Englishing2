<% if current_student %>
  <button class="text-xs font-semibold rounded-full px-4 py-1 leading-normal bg-white border border-purple text-purple hover:bg-purple" id="follow_form">
    <% if current_student.st_following?(teacher) %>
      <%= render 'students/st_unfollow', teacher: teacher %>
    <% else %>
      <%= render 'students/st_follow', teacher: teacher %>
    <% end %>
  </button>
<% end %>
