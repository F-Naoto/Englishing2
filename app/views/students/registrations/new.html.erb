
<h1 class="text-purple-900 font-bold text-2xl text-center mt-10">生徒登録</h1>
<div class=" items-center px-5 lg:px-20">
    <div class="flex flex-col w-full max-w-md p-10 mx-auto my-6 transition duration-500 ease-in-out transform bg-white rounded-lg md:mt-0">
        <div>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <div>
                    <%= f.label :name, "生徒名", class: "block text-sm font-medium text-neutral-600" %>
                    <div class="mt-1">
                        <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "生徒名", class: "block w-full px-5 py-3 text-base text-neutral-600 placeholder-gray-300 transition duration-500 ease-in-out transform border border-transparent rounded-lg bg-gray-50 focus:outline-none focus:border-transparent focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-300" %>
                    </div>
                </div>
                <div class="space-y-1">
                    <%= f.label :email, "メールアドレス", class: "block text-sm font-medium text-neutral-600 mt-3" %>
                    <div class="mt-1">
                        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: "block w-full px-5 py-3 text-base text-neutral-600 placeholder-gray-300 transition duration-500 ease-in-out transform border border-transparent rounded-lg bg-gray-50 focus:outline-none focus:border-transparent focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-300" %>
                    </div>
                </div>
                <div class="space-y-1">
                    <%= f.label :password, "パスワード（最低６文字）", class: "block text-sm font-medium text-neutral-600 mt-3" %>
                    <div class="mt-1">
                        <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード", class: "block w-full px-5 py-3 text-base text-neutral-600 placeholder-gray-300 transition duration-500 ease-in-out transform border border-transparent rounded-lg bg-gray-50 focus:outline-none focus:border-transparent focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-300" %>
                    </div>
                </div>
                <div class="space-y-1">
                    <%= f.label :password_confirmation, "パスワード確認", class: "block text-sm font-medium text-neutral-600 mt-3" %>
                    <div class="mt-1">
                        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード確認", class: "block w-full px-5 py-3 text-base text-neutral-600 placeholder-gray-300 transition duration-500 ease-in-out transform border border-transparent rounded-lg bg-gray-50 focus:outline-none focus:border-transparent focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-300" %>
                    </div>
                </div>
                <div class="flex items-center justify-between">
                    <%= f.submit "登録", class: "flex items-center justify-center w-full px-10 py-4 text-base font-medium text-center text-white transition duration-500 ease-in-out transform bg-blue-600 rounded-xl hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 mt-5" %>
                </div>
            <% end %>
        </div>
    </div>
</div>
