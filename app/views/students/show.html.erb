<h1 class="text-purple-900 font-bold text-2xl text-center mt-10">プロフィール</h1>
<div class="mt-4 bg-white mx-auto max-w-sm shadow-lg rounded-lg overflow-hidden">
  <div class="sm:flex sm:items-center px-4 py-4">
    <div class="w-3/5 text-center sm:text-left sm:flex-grow">
      <div class="mb-4">
        <% if @student.avatar.attached? %>
          <%= image_tag @student.avatar, class: "w-40 block h-full sm:h-24 rounded-full mx-auto mb-4 sm:mb-0 sm:mr-4 sm:ml-0" %>
        <% else %>
          <img src="https://images.unsplash.com/photo-1567515004624-219c11d31f2e??auto=format&q=75&fit=crop&w=256" loading="lazy" alt="Photo by Radu Florin" class="w-40 h-full object-cover object-center" />
        <% end %>
        <div class="sm:text-left sm:flex-grow">
          <div class="mb-4">
            <p class="text-xl leading-tight"><%= @student.name %></p>
            <p class="text-sm leading-tight text-grey-dark"><%= @student.self_introduction %></p>
            <p class="text-sm leading-tight text-grey-dark">質問数：<%= @student.questions.count %></p>
            <p class="text-sm leading-tight text-grey-dark">フォロー、フォロワー：<%= @student.questions.count %></p>
          </div>
          <div class="text-center">
            <button class="text-xs font-semibold rounded-full px-4 py-1 leading-normal bg-white border border-purple text-purple hover:bg-purple hover:text-white">
              Message
            </button>
            <% if current_student %>
              <button class="text-xs font-semibold rounded-full px-4 py-1 leading-normal bg-white border border-purple text-purple hover:bg-purple:text-white">
                <% if current_student.ss_following?(@student) %>
                  <%= render 'partials/ss_unfollow', student: @student %>
                <% else %>
                  <%= render 'partials/ss_follow', student: @student %>
                <% end %>
              </button>
              <% end %>
              <% if current_student && current_student.id == @student.id %>
              <button class="text-xs font-semibold rounded-full px-4 py-1 leading-normal bg-white border border-purple text-purple hover:bg-purple hover:text-white"><%= link_to "Edit", edit_student_registration_path %>
              </button>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="reviews-list mt-10">
  <% if !@student.questions.empty? %>
    <h2 class="text-xl font-bold text-center">質問一覧</h2>
  <% end %>
  <% @student.questions.limit(10).each do |question| %>
    <%= link_to question_path(question) do %>
      <div class="w-2/5 m-auto">
        <div class="flex flex-col gap-3 py-4 md:py-8 border-b-2">
            <div>
              <span class="block text-gray-500 text-sm"><%= question.created_at %></span>
            </div>
            <p class="text-gray-600"><%= question.title %></p>
            <p class="text-gray-600"><%= question.content %></p>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
