<h1 class="text-purple-900 font-bold text-2xl text-center mt-10">プロフィール</h1>
<div class="mt-4 bg-white mx-auto max-w-sm shadow-lg rounded-lg overflow-hidden">
  <div class="sm:flex sm:items-center px-4 py-4">
    <% if @student.avatar.attached? %>
      <%= image_tag @student.avatar, class: "block h-16 sm:h-24 rounded-full mx-auto mb-4 sm:mb-0 sm:mr-4 sm:ml-0" %>
    <% else %>
      <img src="https://images.unsplash.com/photo-1567515004624-219c11d31f2e??auto=format&q=75&fit=crop&w=256" loading="lazy" alt="Photo by Radu Florin"
      class="w-full h-full object-cover object-center" />
    <% end %>
    <div class="text-center sm:text-left sm:flex-grow">
      <div class="mb-4">
        <p class="text-xl leading-tight"><%=@student.name %></p>
        <p class="text-sm leading-tight text-grey-dark"><%=@student.self_introduction %></p>
        <p class="text-sm leading-tight text-grey-dark">質問数：<%=@student.questions.count %></p>
      </div>
      <div>
        <button class="text-xs font-semibold rounded-full px-4 py-1 leading-normal bg-white border border-purple text-purple hover:bg-purple hover:text-white">Message</button>
        <% if current_student && current_student.id == @student.id %>
          <button class="text-xs font-semibold rounded-full px-4 py-1 leading-normal bg-white border border-purple text-purple hover:bg-purple hover:text-white"><%= link_to "Edit", edit_student_registration_path %>
          </button>
        <% end %>
      </div>
    </div>
  </div>
</div>


<% @student.questions.each do |question| %>
  <%= link_to question_path(question) do %>
    <div class="bg-white">
      <div class="max-w-screen-2xl px-4 md:px-8 mx-auto">
        <div class="mt-3 grid sm:grid-cols-1 xl:grid-cols-1 gap-4 md:gap-8">
          <div class="flex flex-col border rounded-lg p-4 md:p-6">
            <h3 class="text-lg md:text-xl font-semibold mb-2"><%=question.title %></h3>
            <h3 class="text-lg md:text-xl font-semibold mb-2"><%=question.content %></h3>
          </div>
      </div>
    </div>
  <% end %>
<% end %>
