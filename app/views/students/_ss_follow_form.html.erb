<% if current_student %>
  <button class="text-xs font-semibold rounded-full px-4 py-1 leading-normal bg-white border border-purple text-purple hover:bg-purple hover:text-white" id="follow_form">
    <% if current_student.ss_following?(student) %>
      <%= render 'ss_unfollow', student: student %>
    <% else %>
      <%= render 'ss_follow', student: student %>
    <% end %>
  </button>
<% end %>
