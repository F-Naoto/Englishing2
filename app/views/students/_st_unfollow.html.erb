<% if current_student %>
  <%= form_with(model: current_student.st_active_relationships.find_by(followed_id: teacher.id),
              html: { method: :delete }, local: false, id: "unfollow") do |f| %>
    <%= hidden_field_tag :followed_id, teacher.id %>
    <%= f.submit "Unfollow", class: "bg-white font-bold cursor-pointer" %>
  <% end %>
<% end %>
