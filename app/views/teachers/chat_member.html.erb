<% provide(:title, "#{@teacher.name}  メッセージ") %>
<h1 class="text-gray-800 text-3xl lg:text-3xl font-bold text-center mb-4 md:mb-6 mt-32"><%= @teacher.name %>のメッセージ</h1>
<div class="mt-10">
  <% @chat_members.each do |chat_member| %>
    <%= link_to chat_room_path(chat_member.chat_room_id) do %>
      <div class="w-2/5 m-auto mt-4 text-center">
        <div class="flex flex-col gap-3 py-4 md:py-8 border-b-2 items-center">
          <% if chat_member.student.avatar.attached? %>
            <%= image_tag chat_member.student.avatar, class: "w-20 h-20 rounded-full object-cover" %>
          <% else %>
            <img src="https://images.unsplash.com/photo-1567515004624-219c11d31f2e??auto=format&q=75&fit=crop&w=256" loading="lazy" alt="Photo by Radu Florin" class="w-20 h-20 rounded-full object-cover">
          <% end %>
          <%= chat_member.student.name %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
