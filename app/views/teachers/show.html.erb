<h2 class="text-center mt-4">さらにみる</h2>
<div class="rating-box mt-3">
<% form_with(model: @teacher_review, url: teacher_teacher_reviews_path(@teacher), local: true) do |f| %>
    <div class="main-rating">
      <div class="ratings mb-3">
        <span class="fa fa-star-o" id="star"></span>
        <span class="fa fa-star-o" id="star"></span>
        <span class="fa fa-star-o" id="star"></span>
        <span class="fa fa-star-o" id="star"></span>
        <span class="fa fa-star-o" id="star"></span>
      </div>
      <div class="ml-3 rating-value-display"><span id="rating-value-display">0</span>/5</div>
    </div>
    <% f.hidden_field :teacher_id, value: @teacher.id %>
    <%# <%= f.hidden_field :score, id: "rating-value" %> %>
    <% f.hidden_field :score, value: 2 %>
    <%= f.text_area :content, class: "textarea" %>
    <%= f.submit "保存", class: "button mt-3" %>
    <%# <%= link_to "他のレビューを見る", ramen_shop_reviews_path(ramen_shop), class: "button light ml-3 mt-3" %> %>
  <% end %>
</div>

