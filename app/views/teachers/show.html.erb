<h1>プロフィール画面</h1>
  <div class="card" style="width: 60rem;">
    <div class="card-body">
      <h5 class="card-title">生徒名：<%=@student.name %></h5>
      <h5 class="card-title">自己紹介：<%=@student.self_introduction %></h5>
      <h3 class="card-title">質問数：<%=@student.questions.count %></h3>
      フォローする！！！
    </div>
  </div>

<% @student.questions.each do |question|%>
  <div class="card">
  <div class="card-header">
   質問
  </div>
  <div class="card-body">
    <h5 class="card-title"><%=question.title %></h5>
    <p class="card-text"><%=question.content %></p>
  </div>
</div>
<% end %>
