<% teacher_reviews.each do |teacher_review| %>
    <div class="flex gap-0.5 -ml-1">
        <span class="text-2xl text-yellow-400">
            <span class="text-3xl text-gray-200">
                <%= teacher_review.score %>
            </span>
        </span>
    </div>
<% end %>

  def score_display(teacher_review)
    case teacher_review.score
    when teacher_review.score == 1 then
      "★"
    when teacher_review.score == 2 then
      "★★"
    when teacher_review.score == 3 then
      "★★★"
    when teacher_review.score == 4 then
      "★★★★"
    else
      "★★★★★"
    end
  end
